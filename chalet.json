{
	"version": "0.0.1",
	"name": "chalet-examples",
	"externalDependencies": {
		"example-metadata": {
			"kind": "git",
			"repository": "git@github.com:chalet-org/chalet-example-metadata.git"
		},
		"example-sfml": {
			"kind": "git",
			"repository": "git@github.com:chalet-org/chalet-example-sfml.git",
			"branch": "v0.6.x"
		},
		"example-sharedlib": {
			"kind": "git",
			"repository": "git@github.com:chalet-org/chalet-example-sharedlib.git"
		}
	},
	"abstracts:*": {
		"language": "C++",
		"settings:Cxx": {
			"cppStandard": "c++17",
			"warningsPreset": "pedantic"
		}
	},
	"targets": {
		"example-metadata": {
			"kind": "chaletProject",
			"location": "${external:example-metadata}",
			"targets": [
				"project-a",
				"project-b"
			],
			"recheck": false,
			"rebuild": false
		},
		"example-sfml": {
			"kind": "chaletProject",
			"location": "${external:example-sfml}",
			"targets":[
				"sfml-app"
			],
			"recheck": false,
			"rebuild": false
		},
		"example-sharedlib": {
			"kind": "chaletProject",
			"location": "${external:example-sharedlib}",
			"targets": [
				"shared-fibonacci-test"
			],
			"buildFile": "chalet.json",
			"rebuild": false
		}
	}
}
