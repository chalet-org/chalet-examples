{
	"version": "0.0.1",
	"workspace": "chalet-examples",
	"abstracts:*": {
		"language": "C++",
		"settings:Cxx": {
			"cppStandard": "c++17",
			"warnings": "pedantic"
		}
	},
	"targets": {
		"example-sharedlib": {
			"kind": "chaletProject",
			"location": "${externalDir}/example-sharedlib",
			"buildFile": "chalet.json",
			"rebuild": false
		},
		"example-mono": {
			"kind": "chaletProject",
			"location": "${externalDir}/example-mono",
			"recheck": false,
			"rebuild": false
		},
		"example-sfml": {
			"kind": "chaletProject",
			"location": "${externalDir}/example-sfml",
			"recheck": false,
			"rebuild": false
		}
	},
	"externalDependencies": {
		"example-sharedlib": {
			"repository": "git@github.com:chalet-org/chalet-example-sharedlib.git"
		},
		"example-mono": {
			"repository": "git@github.com:chalet-org/chalet-example-mono.git"
		},
		"example-sfml": {
			"repository": "git@github.com:chalet-org/chalet-example-sfml.git"
		}
	}
}
